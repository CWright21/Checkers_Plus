
<CheckerScreen>:
    tabMenu: menu
    BoxLayout:

        size: root.width, root.height
        orientation: 'vertical'
        TabbedPanel:
            id: menu
            do_default_tab: False
            size_hint_y: .1
            TabbedPanelItem:
                id: home
                text: "Home"
                on_release: app.home_menu()
                FloatLayout
                    CBoxLayout:
                        id: boxHome
            TabbedPanelItem:
                id: game
                text: "Game"
                on_release: app.game_menu()
                FloatLayout
                    CBoxLayout:
                        id: boxGame


        GridLayout:
            id: board
            size_hint_y: .9
            cols:8
            padding: [50,50,50,50]
            canvas.before:
                BorderImage:
                    source: ".\\assets\\images\\chessboard.jpg"
                    #border: 500,500,500,500
                    pos: self.pos
                    size: self.size
    GridLayout:
        opacity: 1
        id: pieces
        size: board.size
        pos: board.pos
        cols: 8
        padding: [50,50,50,50]


<CBoxLayout@BoxLayout+BackgroundColor>

