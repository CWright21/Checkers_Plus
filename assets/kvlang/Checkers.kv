
<CheckerScreen>:
    tabMenu: menu

    FloatLayout:
        id: starting_img
        size: root.size
        Image:
            id: logo
            pos_hint: {'top': 1}
            source: ".\\assets\\images\\logo.png"

    BoxLayout:

        size: root.width, root.height
        orientation: 'vertical'
        TabbedPanel:
            id: menu
            do_default_tab: False
            size_hint_y: .1
            TabbedPanelItem:
                id: home
                text: "Home"
                on_release: app.home_menu()
                FloatLayout
                    CBoxLayout:
                        id: boxHome
            TabbedPanelItem:
                id: game
                text: "Game"
                on_release: app.game_menu()
                FloatLayout
                    CBoxLayout:
                        id: boxGame

        GridLayout:
            id: board
            opacity: 0
            size_hint_y: .9
            cols:8
            padding: [50,50,50,50]
            canvas.before:
                BorderImage:
                    id: backgroundImg
                    source: ".\\assets\\images\\chessboard2.jpg"
                    #border: 500,500,500,500
                    pos: self.pos
                    size: self.size

    GridLayout:
        opacity: 1
        id: pieces
        size: board.size
        pos: board.pos
        cols: 8
        padding: [50,50,50,50]


    AnchorLayout:
        id: information_center
        size: root.width, 50
        anchor_y: 'bottom'
        Label:
            id:center_text
            text: 'Hello, use the options above to start'
            color: 1, 1, 1, 1
            opacity: 1
            font_size: 20




